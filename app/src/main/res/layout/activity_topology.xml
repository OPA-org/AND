<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_topology"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cse.opa.and.Activity.TopologyActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_gradient">

    <TextView
        android:text="Topology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView5"
        android:textSize="36sp"
        android:textColor="#fff"
        android:fontFamily="sans-serif-light" />
            <LinearLayout
                android:id="@+id/ll_topology"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:background="#66FFFffF">

                <cse.opa.and.ZoomView
                    android:id="@+id/zv_zoomview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <cse.opa.and.TopologyGraphView
                        android:id="@+id/tgv_topology"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </cse.opa.and.ZoomView>
            </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_save_topology"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:elevation="0dp" />

        <Button
            android:text="Report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_generate_report"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
